@model PresentationLayer.Mvc.Models.UserProfileViewModel

@{
    ViewBag.Title = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>User Profile</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle mb-3" alt="Profile Image" style="width: 150px; height: 150px;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle mb-3" alt="Default Profile Image">
                    }

                    <!-- Display User Information -->
                    <div class="mb-3">
                        <strong>Username:</strong> @Model.Username
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong> @Model.Email
                    </div>
                    <div class="mb-3">
                        <strong>Bio:</strong>
                        <p>@Model.Bio</p>
                    </div>

                    <!-- Edit Profile Button -->
                    <a href="@Url.Action("Edit", "User")" class="btn btn-warning w-100">Edit Profile</a>
                </div>
                <div class="card-footer text-center">
                    <small><a href="@Url.Action("ChangePassword", "User")">Change Password</a></small>
                </div>
            </div>
        </div>
    </div>
</div>