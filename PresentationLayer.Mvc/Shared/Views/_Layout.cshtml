@{
    bool isAuthenticated = User.Identity is { IsAuthenticated: true };
    bool isAdmin = isAuthenticated && User.IsInRole(Commons.Enums.UserRole.Admin.ToString());
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JuiceWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JuiceWorld</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home"
                           asp-action="Index">Home</a>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Admin</a>
                        </li>
                    }
                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="User"
                               asp-action="Profile">User Profile</a>
                        </li>
                    }
                    <div class="ms-auto d-flex">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item align-content-end">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="User"
                                   asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item align-content-end">
                                <a class="nav-link text-dark" asp-area="Customer" asp-controller="User"
                                   asp-action="Login">Login</a>
                            </li>
                        }
                    </div>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container p-2 p-lg-5">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - JuiceWorld
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
