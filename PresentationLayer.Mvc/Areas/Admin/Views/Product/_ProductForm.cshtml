@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Commons.Enums
@using PresentationLayer.Mvc
@model PresentationLayer.Mvc.Models.ProductEditViewModel

<form asp-action="@ViewData[Constants.Keys.Action]" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.Name" class="control-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Category" class="control-label"></label>
        <select asp-for="Product.Category" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
        <span asp-validation-for="Product.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description" class="control-label"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price" class="control-label"></label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ManufacturerId" class="control-label"></label>
        <select asp-for="Product.ManufacturerId" class="form-control" asp-items="@(new SelectList(Model.AllManufacturers, "Id", "Name"))"></select>
        <span asp-validation-for="Product.ManufacturerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.TagIds" class="control-label">Tags</label>
        <select asp-for="Product.TagIds" class="form-control" asp-items="@(new SelectList(Model.AllTags, "Id", "Name"))" multiple="multiple"></select>
        <span asp-validation-for="Product.TagIds" class="text-danger"></span>
    </div>
    <div class="form-group mt-3 d-flex justify-content-end">
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary me-2">Cancel</a>
        <input type="submit" value="@ViewData[Constants.Keys.ButtonText]" class="btn btn-primary" />
    </div>
</form>
