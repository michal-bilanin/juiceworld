@model PresentationLayer.Mvc.Areas.Admin.Models.GiftCardDetailViewModel

<div class="card">
    <div class="card-header">
        <h2>Gift Card Details</h2>
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Discount:</strong> @Model.Discount $</p>
        <p><strong>Coupons Count:</strong> @Model.CouponsCount</p>
        <p><strong>Start Date:</strong> @Model.StartDateTime?.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Expiry Date:</strong> @Model.ExpiryDateTime?.ToString("yyyy-MM-dd HH:mm")</p>
    </div>
</div>

<div class="mt-4">
    <h3>Coupon Codes</h3>
    @if (Model.CouponCodes.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Redeemed At</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var coupon in Model.CouponCodes)
            {
                <tr class="@(coupon.RedeemedAt.HasValue ? "table-light" : "table-secondary")">
                    <td>@coupon.Id</td>
                    <td>@coupon.Code</td>
                    <td>@(coupon.RedeemedAt?.ToString("yyyy-MM-dd HH:mm") ?? "Not Redeemed")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No coupons available for this gift card.</p>
    }
</div>

<div class="mt-3 d-flex justify-content-end">
    <a href="@Url.Action("Index", "GiftCard")" class="btn btn-secondary me-2">Back to List</a>
</div>
