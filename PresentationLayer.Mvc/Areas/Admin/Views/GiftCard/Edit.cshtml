@model PresentationLayer.Mvc.Areas.Admin.Models.GiftCardEditViewModel

<h2>Edit gift-card</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3 d-flex justify-content-end">
        <a href="@Url.Action("Index", "GiftCard")" class="btn btn-secondary me-2">Cancel</a>
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>
