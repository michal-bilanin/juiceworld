@using BusinessLayer.DTOs
@using PresentationLayer.Mvc
@model Infrastructure.QueryObjects.FilteredResult<PresentationLayer.Mvc.Areas.Admin.Models.GiftCardEditViewModel>

@{
    ViewData[Constants.Keys.Title] = "Giftcards";
    var startPage = Math.Max(1, Model.PageIndex - 5);
    var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 5);
}

<div class="container mt-5">
    <h2>@ViewData[Constants.Keys.Title]</h2>

    <form method="get" asp-action="Index" class="form-inline mb-3">
        <div class="form-group mr-2 d-flex flex-row gap-2">
            <input type="text" name="Name" class="form-control" placeholder="Search by name"
                   value="@ViewContext.HttpContext.Request.Query["Name"]"/>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <a href="@Url.Action("Create", "GiftCard")" class="btn btn-success mb-3">Create new gift-card</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Gift-card ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var giftCard in Model.Entities)
        {
            <tr>
                <td>@giftCard.Id</td>
                <td>@giftCard.Name</td>
                <td>
                    <a href="@Url.Action("Details", "GiftCard", new { id = giftCard.Id })"
                       class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "GiftCard", new { id = giftCard.Id })" class="btn btn-info">Edit</a>
                    <form method="post" asp-action="Delete" asp-controller="GiftCard" asp-route-id="@giftCard.Id"
                          class="d-inline"
                          onsubmit="return confirm(`Are you sure you want to delete gift-card: @giftCard.Name`);">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new PaginationDto { PageIndex = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
