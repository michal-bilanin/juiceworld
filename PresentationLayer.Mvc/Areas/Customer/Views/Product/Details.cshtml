@using System.Security.Claims
@using Commons.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PresentationLayer.Mvc
@model BusinessLayer.DTOs.ProductDetailDto

@{
    ViewData[Constants.Keys.Title] = Model.Name;
    var userId = int.Parse(User.FindFirstValue(ClaimTypes.Sid) ?? string.Empty);
    var isAdmin = User.IsInRole(UserRole.Admin.ToString());
}

<h1>@Model.Name</h1>

<div class="product-detail">
    <div class="product-image">
        <img src="@(string.IsNullOrEmpty(Model.Image) ? "/images/product_placeholder.jpg" : $"data:image/png;base64,{Model.Image}")" alt="@Model.Name" />
    </div>
    <div class="product-info">
        <p><strong>Manufacturer:</strong> @Model.Manufacturer.Name</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <form id="add-to-cart-form" asp-controller="Product" asp-action="AddToCart" method="post">
            <input type="hidden" id="ProductId" name="ProductId" value="@Model.Id" />
            <input type="hidden" id="Quantity" name="Quantity" value="1" />
            <button type="submit" id="add-to-cart-button" class="btn-secondary">Add to Cart</button>
        </form>
        @if (ViewData[Constants.Keys.ErrorMessage] != null)
        {
            <div id="error-message" style="color: red;">@ViewData[Constants.Keys.ErrorMessage]</div>
        }
    </div>
</div>

<h2>Reviews</h2>
<div class="reviews">
    @foreach (var review in Model.Reviews)
    {
        <div class="review">
            <div class="review-content">
                <p><strong>@review.User.UserName </strong> @for (int i = 0; i < 5; i++) { <span class="star">@((i < review.Rating) ? "★" : "☆")</span> } (@review.Rating/5)</p>
                <p>@review.Body</p>
            </div>
            @if (review.UserId == userId || isAdmin)
            {
                <form asp-action="DeleteReview" method="post" class="delete-form">
                    <input type="hidden" name="id" value="@review.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            }
        </div>
    }
</div>

<h2>Write a Review</h2>
<form asp-action="AddReview" method="post">
    <input type="hidden" name="ProductId" value="@Model.Id" />
    <div>
        <label>Rating:</label>
        <div class="rating">
            @for (int i = 5; i >= 1; i--)
            {
                <input type="radio" id="star-@i" name="Rating" value="@i" required />
                <label for="star-@i" title="@i stars">★</label>
            }
        </div>
    </div>
    <div>
        <label for="Body">Review:</label>
        <textarea id="Body" name="Body" required></textarea>
    </div>
    <button type="submit">Submit Review</button>
</form>

<style>
    .product-detail {
        display: flex;
        gap: 20px;
    }
    .product-image img {
        max-width: 300px;
        height: auto;
    }
    .product-info {
        flex: 1;
    }
    .reviews {
        margin-top: 20px;
    }
    .review {
        display: flex;
        justify-content: space-between;
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }
    .review .star {
        color: gold;
        font-size: 1.2em;
    }
    form {
        margin-top: 20px;
    }
    form div {
        margin-bottom: 10px;
    }
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }
    .rating input {
        display: none;
    }
    .rating label {
        font-size: 2em;
        color: #ccc;
        cursor: pointer;
    }
    .rating input:checked ~ label {
        color: gold;
    }
    .rating label:hover,
    .rating label:hover ~ label {
        color: gold;
    }
    .delete-form {
        display: flex;
        align-items: center;
    }
</style>
