@model BusinessLayer.DTOs.CreateOrderDto

@{
    ViewData["Title"] = "Checkout";
}

<h2>Create Order</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="PaymentMethodType" class="control-label"></label>
        <select asp-for="PaymentMethodType" class="form-control" asp-items="Html.GetEnumSelectList<Commons.Enums.PaymentMethodType>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryType" class="control-label"></label>
        <select asp-for="DeliveryType" class="form-control" asp-items="Html.GetEnumSelectList<Commons.Enums.DeliveryType>()"></select>
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street" class="control-label"></label>
        <input asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HouseNumber" class="control-label"></label>
        <input asp-for="HouseNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CartItems" class="control-label">Order Products</label>
        <table class="table">
            <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
                </tr>
            }
            </tbody>
        </table>

        <div class="mt-3">
            <strong>Grand Total: </strong>
            <span>@Model.CartItems.Sum(p => p.Product.Price * p.Quantity).ToString("C")</span>
        </div>
    </div>

    <div class="form-group mt-3 d-flex justify-content-end">
        <a href="@Url.Action("Index", "Order")" class="btn btn-secondary me-2">Cancel</a>
        <button type="submit" class="btn btn-primary">Checkout</button>
    </div>
</form>
